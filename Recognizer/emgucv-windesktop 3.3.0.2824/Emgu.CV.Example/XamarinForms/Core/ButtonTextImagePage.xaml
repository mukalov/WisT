<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emgu.CV.XamarinForms.ButtonTextImagePage">
<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20"/>
            <On Platform="Android" Value="20, 20, 20, 20"/>
            <On Platform="WinPhone" Value="20, 20, 20, 20"/>
            <On Platform="macOS" Value="20, 20, 20, 20"/>
        </OnPlatform>
                    
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
            <Button x:Name="TopButton" Text="Click me" IsEnabled="true" HorizontalOptions="Center"/>
           <Label x:Name="MessageLabel" Text="" HorizontalOptions="Center"></Label>
           <Image x:Name="DisplayImage"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>